@{ 
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_Layout.cshtml";
    

}
@using DJTUStudentSystem.MVCWEB.Models
@using FluentBootstrap;
@using FluentBootstrap.Mvc;
@model StudentViewModel


<div class="well well-small center text-success hidden-480 hid">
    <h3>
        大连科技学院-@Model.GetNowActYear().ATName @Model.StudentName 的课程表
    </h3>
    <h4 class="text-left text-danger">
        欢迎你 <b>@Model.StudentName 同学</b>
    </h4>
</div>
@using (var table = Html.Bootstrap().Table().SetStyle(TableStyle.Bordered | TableStyle.Hover).AddCss("hidden-480 ").Begin()) 
{
    @table.TableHeaderRow("/", "星期一", "星期二", "星期三", "星期四", "星期五", "星期六", "星期日" );
    
    

}
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                
               
                <table id="sample-table-2" class="table table-striped table-bordered table-hover">
                     <thead>
                        <tr>
                            
                            <th class="hidden-480">学期</th>
                            <th>课程名称</th>
                            <th class="hidden-480">修课方式</th>
                            <th>成绩</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        @if (Model != null)
                        {
                            //var item = Model;

                             foreach (var item in Model.NowStuReportViewModelList)

                            {

                                    <tr>
                                                                            
                                        <td class="hidden-480">
                                            <a href="#">@Html.DisplayFor(d=>item.AtyName)</a>
                                        </td>                                       
                                        <td>
                                            @Html.DisplayFor(d => item.CourseName)
                                     </td>

                                    <td class="hidden-480" >
                                      
                                            @Html.DisplayFor(d => item.Minor)
                                     
                                        
                                    </td>


                                    <td>
                                        @Html.DisplayFor(d => item.CourseResult)
                                    </td>
                                </tr>

                                }
                            }

                        



                    </tbody>
                </table>
                
            </div>
        </div>
    </div>

