@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "公选课选课";

}
@using FluentBootstrap;



<h4 class="text-left ">

    <div role="alert" class="alert alert-info"> 欢迎你!<b><span data-bind='text: StudentName ' class="text-danger "></span>同学</b>，你所在的年级<span data-bind='text: GradeName ' class="text-danger "></span>级，允许选择<span data-bind='text: GradeCanChoose ' class="text-danger "></span>门公选课,本学期你已经选择了<span data-bind='text: HowManyNowHaveStudentChoose ' class="text-danger "></span>门公选课,入学以来共修过<span data-bind='text: HowManyHaveStudentChoose ' class="text-danger "></span>门公选课。</div>
</h4>
@Html.Bootstrap().Heading1("大连科技学院公选课开课计划").SetAlignment(TextAlignment.Center).SetState(TextState.Muted).SetBackgroundState(BackgroundState.Success)
@using (Html.Bootstrap().Container().SetAlignment(TextAlignment.Center).Begin())
{
    <a href="/Content/001.jpg">
        @Html.Bootstrap().Image("/Content/001min.jpg", "第一页").MakeSmall().SetAlignment(TextAlignment.Center).AddAttribute("height", "30%").AddAttribute("width", "30%")
    </a>
    <a href="/Content/002.jpg">
        @Html.Bootstrap().Image("/Content/002min.jpg", "第二页").MakeSmall().SetAlignment(TextAlignment.Center).AddAttribute("height", "30%").AddAttribute("width", "30%")
    </a>

}

@using (var table = Html.Bootstrap().Table().SetStyle(TableStyle.Bordered | TableStyle.Hover).SetAlignment(TextAlignment.Center).AddCss("text-center").SetId("Elective").Begin())
{

    <thead class="text-center">
        <tr>
            <th>序号</th>
            <th>课程名称</th>
            <th class=" hidden-480">任课教师</th>
            <th class=" hidden-480">开放状态</th>
            <th class=" hidden-480">开放人数</th>
            <th class=" hidden-480">已选人数</th>
            <th>余量</th>
            <th class="hidden-480">课程表</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: CourseList">
        <tr data-bind="css:{success:(IsCurrentStudentCanChoose) ,warning:(IsHaveChosen),danger:(!IsCurrentStudentCanChoose)}" class="vert-align">
            <td class="vert-align"><span data-bind="html: XuHao"></span></td>
            <td class="vert-align"><span data-bind="html: CourseName"></span></td>
            <td class="vert-align hidden-480"><span data-bind="html: TeacherName"></span></td>
            <td class="vert-align hidden-480"><span data-bind="html: SelectState"></span></td>
            <td class="vert-align hidden-480"><span data-bind="html: OpenNum"></span></td>
            <td class="vert-align"><span data-bind="html: HaveNum"></span></td>
            <td class="vert-align"><span data-bind="html: allowance"></span></td>
            <td class="vert-align hidden-480"><span data-bind="html: KCB"></span></td>
            <td class="vert-align"><span data-bind="html: Html"></span></td>
        </tr>
    </tbody>



}

